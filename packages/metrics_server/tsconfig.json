{
  "compilerOptions": {
    "module": "node16",
    "target": "es2020",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "es2020"
    ],
    "noEmit": true
  },
  "include": [
    "**/*.ts"
, "tsconfig.json"  ],
  "exclude": [
    "dist"
  ]
}
