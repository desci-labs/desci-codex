{
  "name": "@desci-labs/desci-codex-metrics",
  "version": "2.0.0",
  "description": "Shared metrics types and utilities for Codex",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "src"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsc --build tsconfig.json",
    "clean": "tsc --build --clean",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "doPublish": "pnpm run build && cd ../.. && pnpm publish --access public --filter @desci-labs/desci-codex-metrics --no-git-checks"
  },
  "devDependencies": {
    "@libp2p/crypto": "^5.0.0",
    "@libp2p/interface": "^2.0.0",
    "@libp2p/peer-id": "^5.0.0",
    "@types/node": "^20.11.24",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "zod": "^3.22.4"
  }
}