{
  "compilerOptions": {
    "module": "node16",
    "target": "es2020",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2020"],
    "rootDir": "src",
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist"
  ],
  "references": [
    { "path": "../models" }
  ]
}